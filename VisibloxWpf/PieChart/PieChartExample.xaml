<UserControl x:Class="Visiblox.Charts.Examples.PieChart.PieChartExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400"
    xmlns:local="clr-namespace:Visiblox.Charts.Examples.PieChart"
    xmlns:charts="clr-namespace:Visiblox.Charts;assembly=Visiblox.Charts">
    
    <UserControl.Resources>
        <Style x:Key="NoBorder" TargetType="Border">
            <Setter Property="BorderThickness" Value="0" />
        </Style>        
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Background="White">
        <charts:PieChart x:Name="MainChart" Width="575" Title="2010 FIA Formula One World Championship - Wins by Driver"
                         IsInteractionEnabled="True" IsExploding="True" AnimationEnabled="True" 
                         SelectionMode="Multiple" ShowLabels="True" PlotAreaBorderStyle="{StaticResource NoBorder}">
        </charts:PieChart>

    </Grid>

</UserControl>
